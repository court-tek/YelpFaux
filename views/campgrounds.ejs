<% include partials/header %>
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome To YelpVinyl!</h1>
      <p>View record stores from all over the world</p>
      <p>
        <a class="btn btn-primary btn-lrg" href="/campgrounds/new">Add New Record Store</a>
      </p>
    </div>
  </header>

  <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <% valkyrie.forEach(function(campground){ %>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <img src="<%= campground.image %>">
          <div class="option">
            <h4><%= campground.name %></h4>
          </div>
        </div>
      </div>
      <% }); %>
  </div>
  <% include partials/footer %>
